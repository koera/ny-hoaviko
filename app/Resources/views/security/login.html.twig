{% extends 'base.html.twig' %}


{% block body %}
     <div class="row">
        <div class="col-md-12">
            <h2 class="text-center text-white mb-4">Bootstrap 4 Login Form</h2>
            <div class="row">
                <div class="col-md-6 mx-auto">

                    <!-- form card login -->
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0">Login</h3>
                        </div>
                        <div class="card-body">
                             <div class="message">
                                {% if error %}
                                    <p class="error text-danger">
                                        <i class="fa fa-close"></i> {{ error.messageKey|trans(error.messageData, 'security') }}
                                    </p>
                                {% endif %}
                            </div>
                            <form class="form" role="form" autocomplete="off" id="formLogin" novalidate="" action="{{ path("loginCheck") }}" method="POST">
                                <div class="form-group">
                                    <label for="uname1">Username</label>
                                    <input type="text" class="form-control form-control-lg rounded-0" name="_username" id="username" required="">
                                    <div class="invalid-feedback">Oops, you missed this one.</div>
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" class="form-control form-control-lg rounded-0" id="password" required="" autocomplete="new-password" name="_password">
                                    <div class="invalid-feedback">Enter your password too!</div>
                                </div>
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                        <label class="form-check-label" for="exampleCheck1">Souviens de mois</label>
                                    </div>
                                <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Se connecter</button>
                            </form>
                        </div>
                        <hr />
                        <a href="{{ path('registration') }}">Cr√©er un compte</a>
                        <!--/card-block-->
                    </div>
                    <!-- /form card login -->

                </div>


            </div>
            <!--/row-->

        </div>
        <!--/col-->
    </div>
{% endblock %}
